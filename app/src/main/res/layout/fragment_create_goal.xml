<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".CreateMinMaxGoalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE GOAL"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:textSize="29sp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/goalNameEditText"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="   Goal Name"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:background="@drawable/input_background"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/minAmountEditText"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="   Min Amount"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:textColorHint="@color/white"
            android:background="@drawable/input_background"/>

        <EditText
            android:id="@+id/maxAmountEditText"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="   Max Amount"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:textColorHint="@color/white"
            android:background="@drawable/input_background"/>

        <Button
            android:id="@+id/saveGoalButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:text="SAVE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/yellow"/>

        <TextView
            android:id="@+id/cancelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cancel"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>
</FrameLayout>
