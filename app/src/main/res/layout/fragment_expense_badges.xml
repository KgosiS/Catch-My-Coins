<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#789F25">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_back"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Badges"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/yellow"
        android:layout_marginBottom="24dp" />

    <!-- Beginner Badge -->
    <LinearLayout
        android:id="@+id/beginner_expense_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#D3D946"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:backgroundTintMode="add"
        android:clipToOutline="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginner"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_star"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Milestone:\n10+ Expenses Logged ðŸŽ‰"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R 1000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Intermediate Badge -->
    <LinearLayout
        android:id="@+id/intermediate_expense_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#D3D946"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_star"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone:\n50+ Expenses Logged ðŸŽ‰"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R 5000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
